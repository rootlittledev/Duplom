<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/main_seasons_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Сезони"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageButton
            android:id="@+id/season_1"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/summer"/>
        <ImageButton
            android:id="@+id/season_2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/season_1"
            android:src="@drawable/autumn"/>
        <ImageButton
            android:id="@+id/season_3"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_below="@id/season_1"
            android:src="@drawable/winter"/>
        <ImageButton
            android:id="@+id/season_4"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/season_3"
            android:layout_below="@id/season_2"
            android:src="@drawable/spring"/>
    </RelativeLayout>
    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Search"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="Search"/>
</LinearLayout>